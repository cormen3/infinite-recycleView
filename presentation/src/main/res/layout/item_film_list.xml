<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemFilmListConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
            android:id="@+id/itemFilmListPosterImageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/ic_search"
    />

    <TextView
            android:id="@+id/itemFilmListTitleTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
              app:layout_constraintTop_toTopOf="@+id/itemFilmListPosterImageView"
            app:layout_constraintBottom_toBottomOf="@+id/itemFilmListPosterImageView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/itemFilmListPosterImageView"
              android:layout_marginTop="15dp"
    />

</android.support.constraint.ConstraintLayout>