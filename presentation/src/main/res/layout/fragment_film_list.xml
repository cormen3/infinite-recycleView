<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    >

    <EditText
            android:id="@+id/filmListSearchEditText"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/filmListSearchIconImageView"
            android:layout_height="48dp"/>

    <ImageView
            android:id="@+id/filmListSearchIconImageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/ic_search"
    />

    <android.support.v7.widget.RecyclerView
            android:id="@+id/filmListRecyclerView"
            app:layout_constraintTop_toBottomOf="@+id/filmListSearchEditText"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scrollbars="vertical"
    />

</android.support.constraint.ConstraintLayout>